<!DOCTYPE html>

<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Sistema de Usuários</title>
	<link rel="shortcut icon" href="~/Image/Users.png" />
	@Styles.Render("~/Content/css")
</head>
<body>
	<header class="navbar navbar-light navbar-expand-lg" style="background-color: #e3f2fd; position:fixed; left:0; top:0; min-width:100%; max-width:100%; height:8%">		
		@Html.ActionLink("Sistems de Usuários", "Index", "Usuario", new { area = "" }, new { @class = "navbar-brand" })
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item active">
					@Html.ActionLink("Usuários", "Index", "Usuario", new { area = "" }, new { @class = "nav-link" })
				</li>
			</ul>
			<div class="form-inline my-2 my-lg-0">
				@Html.ActionLink("Alterar Senha", "Resete", "Home", new { area = "" }, new { @class = "nav-link" })
				@Html.ActionLink("Sair", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })
			</div>
		</div>
	</header>

	<div class="container body-content" style="position:fixed; top:8%; left:0; min-width:100%; max-width:100%; height:84%; overflow:auto; padding-top:1%; padding-left:1%;">
		@RenderBody()
		<hr />
	</div>
	<div class="container" style="position:fixed; top:92%; left:0; min-width:100%; max-width:100%; height:8%">
		<footer>
			<p>&copy; @DateTime.Now.Year - Warley Lima</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/popper")
	@RenderSection("scripts", required: false)
</body>
</html>
